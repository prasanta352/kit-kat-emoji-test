<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    xmlns:custom="http://schemas.huawei.com/res/custom"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:weight="1"
        ohos:height="0"
        ohos:padding="12fp"
        ohos:alignment="center"
        ohos:width="match_parent"
        ohos:orientation="vertical"
        ohos:background_element="#000"
        >

        <TextField
            ohos:id="$+id:txt_sentMessage"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:background_element="#fff"
            ohos:text="Hello"
            ohos:padding="12vp"
            ohos:text_size="24fp"
            />
        <Button
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:id="$+id:openKeyboard"
            ohos:text="openKeyboard"
            ohos:text_size="24fp"
            ohos:margin="12vp"
            ohos:padding="12vp"
            ohos:background_element="#fff"
            />
        <Button
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="closeKeyboard"
            ohos:id="$+id:closeKeyboard"
            ohos:text_size="24fp"
            ohos:margin="12vp"
            ohos:padding="12vp"
            ohos:background_element="#fff"

            />
        <Button
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:id="$+id:focusKeyboard"
            ohos:text="focus"
            ohos:text_size="24fp"
            ohos:margin="12vp"
            ohos:padding="12vp"
            ohos:background_element="#fff"
            />
        <Button
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="un-focus"
            ohos:id="$+id:unFocusKeyboard"
            ohos:text_size="24fp"
            ohos:margin="12vp"
            ohos:padding="12vp"
            ohos:background_element="#fff"

            />
    </DirectionalLayout>


