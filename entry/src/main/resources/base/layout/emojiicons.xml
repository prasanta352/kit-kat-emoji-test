<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    xmlns:custom="http://schemas.huawei.com/res/custom"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:id="$+id:main_fractions"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:height="32vp"
        ohos:width="match_parent"
        ohos:background_element="#ddd"
        ohos:orientation="horizontal">

        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:alignment="center"
            ohos:background_element="$color:black"
            ohos:weight="1"
            >

            <Button
                ohos:height="32vp"
                ohos:width="32vp"
                ohos:id="$+id:emojis_tab_00_recent"
                ohos:background_element="$graphic:ic_emoji_recent"
                />
        </DirectionalLayout>

        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:alignment="center"
            ohos:background_element="$color:black"
            ohos:weight="1"
            >

            <Button
                ohos:height="32vp"
                ohos:width="32vp"
                ohos:background_element="$graphic:ic_emoji_people"
                ohos:id="$+id:emojis_tab_0_people"
                />
        </DirectionalLayout>

        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:alignment="center"
            ohos:background_element="$color:black"
            ohos:weight="1">

            <Button
                ohos:height="32vp"
                ohos:width="32vp"
                ohos:background_element="$graphic:ic_emoji_nature"
                ohos:id="$+id:emojis_tab_1_nature"
                />
        </DirectionalLayout>

        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:alignment="center"
            ohos:background_element="$color:black"
            ohos:weight="1">

            <Button
                ohos:height="32vp"
                ohos:width="32vp"
                ohos:background_element="$graphic:ic_emoji_objects"
                ohos:id="$+id:emojis_tab_2_objects"
                />
        </DirectionalLayout>

        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:alignment="center"
            ohos:background_element="$color:black"
            ohos:weight="1">

            <Button
                ohos:height="32vp"
                ohos:width="32vp"
                ohos:background_element="$graphic:ic_emoji_places"
                ohos:id="$+id:emojis_tab_3_cars"
                />
        </DirectionalLayout>

        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:alignment="center"
            ohos:background_element="$color:black"
            ohos:weight="1">

            <Button
                ohos:height="32vp"
                ohos:width="32vp"
                ohos:background_element="$graphic:ic_emoji_symbols"
                ohos:id="$+id:emojis_tab_4_punctuation"
                />
        </DirectionalLayout>

        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:alignment="center"
            ohos:background_element="$color:white"
            ohos:weight="1">

            <Button
                ohos:height="32vp"
                ohos:width="32vp"
                ohos:background_element="$media:ic_vp_delete_s"
                ohos:id="$+id:emojis_backspace"
                />
        </DirectionalLayout>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="1vp"
        ohos:width="match_parent"
        ohos:background_element="$color:color_ash_light"/>

    <DirectionalLayout
        ohos:height="0vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:weight="1"

        >

        <PageSlider
            ohos:id="$+id:emoji_pager"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:background_element="$color:black"/>
    </DirectionalLayout>
</DirectionalLayout>